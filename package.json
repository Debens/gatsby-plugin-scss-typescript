{
    "name": "gatsby-plugin-scss-typescript",
    "version": "5.1.0",
    "author": "Andrew Debens",
    "description": "GatsbyJS plugin for using SCSS Modules and generating Typescript declaration files",
    "repository": {
        "type": "git",
        "url": "https://github.com/debens/gatsby-plugin-scss-typescript"
    },
    "license": "MIT",
    "main": "index.js",
    "keywords": [
        "scss",
        "sass",
        "modules",
        "typescript",
        "gatsby",
        "gatsby-plugin",
        "gatsby-plugin-typescript",
        "gatsby-plugin-sass",
        "gatsby-plugin-scss"
    ],
    "scripts": {
        "build": "webpack",
        "test": "jest --config jest.config.js",
        "test:watch": "yarn test --watch",
        "test:coverage": "yarn test --coverage",
        "test:ci": "yarn test:coverage --ci --silent",
        "release": "standard-version",
        "release:alpha": "yarn release --prerelease",
        "format": "prettier ./src/**/*",
        "lint": "eslint --ext .js,.ts",
        "lint:all": "eslint --ext .js,.ts ./src",
        "lint:check": "eslint --print-config src/gatsby-node.ts | eslint-config-prettier-check",
        "lint:staged": "lint-staged"
    },
    "peerDependencies": {
        "gatsby": "^3.0.0",
        "sass": "^1.0.0",
        "webpack": "^5.0.0"
    },
    "dependencies": {
        "core-js": "^3.10.2",
        "dts-css-modules-loader": "^1.2.1",
        "sass-loader": "^11.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@babel/preset-env": "^7.13.15",
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@types/jest": "^26.0.22",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "babel-loader": "^8.2.2",
        "commitlint": "^12.1.1",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-jest": "^24.3.5",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "standard-version": "^9.2.0",
        "ts-jest": "^26.5.5",
        "ts-loader": "^9.0.2",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^4.2.4",
        "webpack": "^5.35.0",
        "webpack-cli": "^4.6.0"
    }
}

{
    "name": "gatsby-plugin-scss-typescript",
    "version": "5.0.0",
    "author": "Andrew Debens",
    "description": "GatsbyJS plugin for using SCSS Modules and generating Typescript declaration files",
    "repository": {
        "type": "git",
        "url": "https://github.com/debens/gatsby-plugin-scss-typescript"
    },
    "license": "MIT",
    "main": "index.js",
    "keywords": [
        "scss",
        "sass",
        "modules",
        "typescript",
        "gatsby",
        "gatsby-plugin",
        "gatsby-plugin-typescript",
        "gatsby-plugin-sass",
        "gatsby-plugin-scss"
    ],
    "scripts": {
        "build": "webpack",
        "test": "jest --config jest.config.js",
        "test:watch": "yarn test --watch",
        "test:coverage": "yarn test --coverage",
        "test:ci": "yarn test:coverage --ci --silent",
        "release": "standard-version",
        "release:alpha": "yarn release --prerelease",
        "format": "prettier ./src/**/*",
        "lint": "eslint --ext .js,.ts",
        "lint:all": "eslint --ext .js,.ts ./src",
        "lint:check": "eslint --print-config src/gatsby-node.ts | eslint-config-prettier-check",
        "lint:staged": "lint-staged"
    },
    "peerDependencies": {
        "css-loader": "*",
        "gatsby": "^2.0.0",
        "sass": "^1.0.0",
        "webpack": "^3.0.0 || ^4.0.0"
    },
    "dependencies": {
        "@teamsupercell/typings-for-css-modules-loader": "^2.4.0",
        "core-js": "^3.0.0",
        "resolve-url-loader": "^3.1.2",
        "sass-loader": "^10.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/jest": "^26.0.20",
        "@types/webpack": "^4.4.32",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.0.0",
        "@typescript-eslint/parser": "^1.12.0",
        "babel-loader": "^8.2.2",
        "commitlint": "^11.0.0",
        "css-loader": "^3.0.0",
        "eslint": "^6.2.2",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-jest": "^22.15.2",
        "husky": "^4.3.7",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.18.2",
        "standard-version": "^9.1.0",
        "style-loader": "^0.23.1",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.14",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^4.1.3",
        "webpack": "^3.0.0 || ^4.0.0",
        "webpack-cli": "^4.3.1"
    }
}
